    <application
        android:allowBackup="true"
        android:icon="@drawable/netifylogo"
        android:label="@string/app_name"
        android:theme="@style/NetifyActionBarTheme" >
        <activity
            android:name=".LoginActivity_"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".YoutubeSearchActivity_" android:configChanges="orientation|screenSize" />
        <activity android:name=".YoutubePlayerActivity_" android:configChanges="orientation|screenSize"/>
        <activity android:name=".GroupActivity_" android:configChanges="orientation|screenSize"/>
        <activity android:name=".HomeActivity_" android:configChanges="orientation|screenSize"/>
        <activity android:name=".ProfileActivity_" android:configChanges="orientation|screenSize"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>
