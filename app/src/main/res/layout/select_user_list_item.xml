<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="5dp"
    android:background="@drawable/youtube_list_item"
    >

    <TextView android:id="@+id/firstNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="imie"
        android:textColor="@color/material_blue_grey_950" />

    <TextView android:id="@+id/lastNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/firstNameField"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="nazwisko"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textColor="@color/material_blue_grey_950" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>